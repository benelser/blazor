<div>
    <h3>First name: @FirstName</h3>
    <h3>Last name: @LastName</h3> 
    <h3>Age: @Age</h3>
</div>

@code{

    [Parameter]
    public string FirstName { get; set; }
    [Parameter]
    public string LastName { get; set; }
    [Parameter]
    public int Age { get; set; }
    public string PhoneNumber { get; set; }

    public string SayHello()
    {
        return $"Hi there! My name is {this.FirstName}. I am {this.Age} years old";
    }

    public void CallMe()
    {
        Console.WriteLine($"Calling {this.FirstName} at {this.PhoneNumber}");
    }

    public Person(string f, string l, int age)
    {
        this.FirstName = f;
        this.LastName = l;
        this.Age = age;
        this.PhoneNumber = "555-666-7788";
    }

    // Default constructor required
    public Person()
    {
        
    }
    
}